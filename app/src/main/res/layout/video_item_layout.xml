<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">



    <ImageView
        android:id="@+id/video_child_image_content"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#88000000"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <WebView
    android:id="@+id/video_child_webview"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:visibility="gone" />
    <!--<VideoView-->
        <!--android:id="@+id/video_child_videoview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="260dp"-->
        <!--android:visibility="gone" />-->

    <LinearLayout
        android:id="@+id/video_child_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_child_content"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="qwrqwr" />
    </LinearLayout>

    <ImageView
        android:id="@+id/video_child_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/play_button" />

    <TextView
        android:id="@+id/view_child_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/video_child_linearlayout"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_video_videotime"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:text="00:00"
        android:textColor="#fff"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/video_child_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#20000000"
        android:padding="10dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="title"
        android:textSize="15sp" />
</RelativeLayout>
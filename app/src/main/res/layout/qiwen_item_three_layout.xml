<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/qiwen_item_three_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/qiwen_item_three_lv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/qiwen_item_three_title"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qiwen_item_three_left_iv"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
             />

        <ImageView
            android:id="@+id/qiwen_item_three_mid_iv"
            android:layout_width="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
             />

        <ImageView
            android:id="@+id/qiwen_item_three_right_iv"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
             />
    </LinearLayout>
    <TextView
        android:id="@+id/qiwen_item_three_content"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="12sp"
        android:textColor="#55000000"
        />
</LinearLayout>
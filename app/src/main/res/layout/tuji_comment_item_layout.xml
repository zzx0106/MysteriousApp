<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/tuji_comment_item_icon"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/tuji_comment_item_username"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp"
        android:text="1111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#C0C0C0"/>
    <TextView
        android:layout_marginRight="10dp"

        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#C0C0C0"/>
    <TextView
        android:id="@+id/tuji_comment_item_text"
        android:text="6666666"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="10dp"
        android:layout_below="@id/tuji_comment_item_text"
        android:text="33333"
        android:id="@+id/tuji_comment_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#C0C0C0"/>
    <ImageView
        android:layout_marginTop="7dp"
        android:layout_below="@id/tuji_comment_item_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"

        android:layout_width="25dp"
        android:layout_height="20dp" />
    <TextView

        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tuji_comment_item_goodnum"

        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_below="@id/tuji_comment_item_text"
        android:textColor="#C0C0C0"/>

</RelativeLayout>